<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_background" />

    <Button
        android:id="@+id/register_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/titleImage"
        android:layout_alignLeft="@+id/login_view_button"
        android:layout_marginBottom="152dp"
        android:onClick="onRegisterViewClick"
        android:text="@string/register_button_text" />

    <Button
        android:id="@+id/login_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_view_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:onClick="onLoginViewClick"
        android:text="@string/login_button_text" />

</RelativeLayout>