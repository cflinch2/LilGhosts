<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_background"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/loginActivity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/highscore_button"
        android:layout_alignRight="@+id/highscore_button"
        android:layout_centerVertical="true"
        android:onClick="onGoToLoginClick"
        android:text="@string/login_button_text" />

    <Button
        android:id="@+id/highscore_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/play_button"
        android:layout_alignRight="@+id/play_button"
        android:layout_below="@+id/loginActivity_button"
        android:layout_marginTop="17dp"
        android:onClick="onScoreClick"
        android:text="@string/highscore_button_text" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginActivity_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:onClick="onPlayClick"
        android:text="@string/play_button_text" />

</RelativeLayout>